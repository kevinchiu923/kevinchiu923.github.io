<div class="container">
    <div class="meta">
        <div class="type">
            <%= is_category() ? __('category') : '' %>
                <%= is_tag() ? __('tag') : '' %>
        </div>
    </div>

    <h2 class="connections-title">Connections</h2>
    <div class="divider"></div>

        <% if (page.connections && page.connections.length) { %>
            <div class="connection-cards">
                <% page.connections.forEach(connection=> { %>
                    <div class="connection-card">
                        <img class="connection-avatar" src="<%= connection.avatar %>"
                            alt="<%= connection.name %>'s avatar">
                        <div class="connection-name">
                            <%= connection.name %>
                        </div>
                        <div class="connection-desc">
                            <%= connection.description %>
                        </div>
                        <a class="connection-link" href="<%= connection.link %>" target="_blank">Visit</a>
                    </div>
                    <% }) %>
            </div>
            <!-- <% } else { %>
            <p>No connections added yet!</p>
            <% } %> -->
            <%- partial('_partial/paginator') %>
</div>


<style>
    .meta {
        margin-bottom: 2rem;
    }

    .paginator {
        margin-top: 2rem;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .connections-title {
        font-size: 2rem;
        font-weight: 600;
        /* text-align: center; */
        /* margin: 2rem 0 1rem; */
        letter-spacing: 0.03em;
    }

    .connection-cards {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        margin: 3rem 0;
        /* margin-top: 2rem; */
        justify-content: center;
    }

    .connection-card {
        /* background: #1e1e1e; */
        border-radius: 16px;
        padding: 1rem;
        width: 220px;
        text-align: center;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .connection-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
    }

    body[data-theme='dark'] .connection-name,
    body[data-theme='dark'] .connection-desc {
        color: #fff;
    }

    body[data-theme='light'] .connection-name,
    body[data-theme='light'] .connection-desc {
        color: #000;
    }

    .connection-name {
        margin-top: 0.8rem;
        font-weight: bold;
        font-size: 1.1rem;
    }

    .connection-desc {
        font-size: 0.9rem;
        margin: 0.5rem 0;
    }

    .connection-link {
        background: transparent;
        border: 2px solid #007aff;
        color: #007aff;
        padding: 0.4rem 0.8rem;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        font-size: 0.9rem;
        font-weight: bold;
    }

    .connection-link:hover {
        text-decoration: none;
    }
</style>